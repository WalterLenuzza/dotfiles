format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.bblack}
format-connected-suffix-background = ${colors.black}

[module/date]
type = internal/date
interval = 1

date = %d-%m-%Y
date-alt = %d-%m-%Y

label            = %{T3}%{T-} %date%
label-padding    = 1
label-foreground = ${colors.foreground}
label-background = ${colors.black}

format-prefix            = 
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.bblack}

format-suffix            = 
format-suffix-foreground = ${colors.bgreen}
format-suffix-background = ${colors.black}

[module/time]
type = internal/date
interval = 1

time = %H:%M
time-alt = %H:%M:%S

label            = %{T3}%{T-} %time%
label-padding    = 1
label-foreground = ${colors.background}
label-background = ${colors.bgreen}

[module/volume]
