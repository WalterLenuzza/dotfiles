format-prefix            = 
format-prefix-foreground = ${colors.black}
format-prefix-background = ${colors.bblack}

format-suffix            = 
format-suffix-foreground = ${colors.bblack}
format-suffix-background = ${colors.black}

[module/wlan]
type      = internal/network
interface = wlp4s0
interval  = 1.0

format-disconnected =
format-connected = <label-connected>

label-connected            = %{T3}%{T-} %downspeed:8%    %{T3}%{T-} %upspeed:8%
label-connected-foreground = ${colors.foreground}
label-connected-background = ${colors.black}
label-connected-padding    = 1

format-connected-prefix            = 
format-connected-prefix-foreground = ${colors.black}
format-connected-prefix-background = ${colors.bblack}

format-connected-suffix            = 
format-connected-suffix-foreground = ${colors.bblack}
format-connected-suffix-background = ${colors.black}

[module/eth]
type = internal/network
