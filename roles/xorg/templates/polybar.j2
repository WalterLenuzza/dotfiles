transparent = #00282828
transparent_black = #cc282828


[bar/{{ polybar_name }}]
; Modules
modules-left   = powermenu i3
modules-center = xwindow
modules-right  = cpu memory date_time

; Put the bar at the top of the screen
bottom = false

; Dimensions defined as pixel value (e.g. 35) or percentage (e.g. 50%)
width = 100%
height = 13

; Prefer fixed center position for the `modules-center` block
; When false, the center position will be based on the size of the other blocks.
fixed-center = true

; Fonts are defined using <font-name>;<vertical-offset>
; Font names are specified using a fontconfig pattern.
;   font-0 = NotoSans-Regular:size=8;2
;   font-1 = MaterialIcons:size=10
;   font-2 = Termsynu:size=8;-1
;   font-3 = FontAwesome:size=10
; See the Fonts wiki page for more details
font-0 = NotoSans-Regular:size=10;2
font-1 = AnonymicePowerline Nerd Font:size=10;2

; Number of spaces to add at the beginning/end of the bar
; Individual side values can be defined using:
;   padding-{left,right}
padding-left = 0
padding-right = 0

; Number of spaces to add before/after each module
; Individual side values can be defined using:
;   module-margin-{left,right}
module-margin-right = 0
module-margin-left = 0

;offset-x = 1085
;offset-y = 0

; Position of the system tray window
; If empty or undefined, tray support will be disabled
; NOTE: A center aligned tray will cover center aligned modules
; Available positions: left, center, right
tray-position = right

; If true, the bar will not shift its
; contents when the tray changes
tray-detached = false

; Tray icon max size
tray-maxsize = 16

; Pad the sides of each tray icon
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 0
tray-scale = 1

; Background argb color (e.g. #f00, #ff992a, #ddff1023)
background = ${colors.transparent_black}

; Foreground argb color (e.g. #f00, #ff992a, #ddff1023)
foreground = ${colors.white}

;border-left-size = 15
;border-right-size = 15
;border-color = ${colors.green}

; Tell the Window Manager not to configure the window.
; Use this to detach the bar if your WM is locking its size/position.
;override-redirect = true

; Restack the bar window and put it above the selected window manager's root
; Fixes the issue where the bar is being drawn on top of fullscreen window's
; Currently supported WM's:
;   bspwm
;   i3 (requires: `override-redirect = true`)
;wm-restack = true

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = false


[module/powermenu]
type = custom/menu

label-open = "  "
menu-0-0 = "|  L  |"
menu-0-0-exec = echo
menu-0-1 = "    "
menu-0-1-exec = echo
menu-0-2 = "|    "
menu-0-2-exec = echo
label-close = "  "

format = <label-toggle> <menu>
format-background = ${colors.darkred}
format-foreground = ${colors.black}

format-suffix            = 
format-suffix-foreground = ${colors.darkred}
format-suffix-background = ${colors.black}


[module/i3]
type = internal/i3

; Only show workspaces defined on the same output as the bar
; Useful if you want to show monitor specific workspaces
; on different bars
pin-workspaces = false

; Split the workspace name on ':'
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
index-sort = false

; Create click handler used to focus workspace
enable-click = true

; Create scroll handlers used to cycle workspaces
enable-scroll = true

; Wrap around when reaching the first/last workspace
wrapping-scroll = true

; Set the scroll cycle direction
reverse-scroll = false

; Format
format = <label-state> <label-mode>

; Mode
label-mode      = %{B#cc98971a F#cc282828}%{B#cc98971a F#cc282828}%{F#cc282828 B#cc98971a}   %mode%   %{B#cc98971a F#cc282828}%{B#cc282828 F#cc98971a}

; Workspaces
; Available tokens:  %name% %icon% %index% %output%
label-focused   = %{B#ccd65d0e F#cc282828}%{B#ccd65d0e F#cc282828}%{F#cc282828 B#ccd65d0e}   %name%   %{B#ccd65d0e F#cc282828}%{B#cc282828 F#ccd65d0e}
label-unfocused = %{B#cc282828 F#cc282828}%{B#cc282828 F#cc928374}%{F#ccebdbb2 B#cc282828}   %name%   %{B#cc282828 F#cc928374}%{B#cc282828 F#cc282828}
label-visible   = %{B#cc282828 F#cc282828}%{B#cc282828 F#cc928374}%{F#ccebdbb2 B#cc282828}   %name%   %{B#cc282828 F#cc928374}%{B#cc282828 F#cc282828}
label-urgent    = %{B#cccc241d F#cc282828}%{B#cc282828 F#cc928374}%{F#ccebdbb2 B#cc282828}   %name%   %{B#cc282828 F#cc928374}%{B#cc282828 F#cc282828}


[module/xwindow]
type = internal/xwindow

label-background = ${colors.black}
label-foreground = ${colors.white}
label-padding    = 10
format = <label>
label  = %title%

format-prefix            = 
format-prefix-background = ${colors.transparent_black}
format-prefix-foreground = ${colors.black}

format-suffix            = 
format-suffix-background = ${colors.transparent_black}
format-suffix-foreground = ${colors.black}


[module/cpu]
type     = internal/cpu
interval = 2

label-background = ${colors.darkcyan}
label-foreground = ${colors.black}
label-padding   =  5
format           = <label>
label            =  %percentage%%

format-prefix            = 
format-prefix-foreground = ${colors.darkcyan}
format-prefix-background = ${colors.transparent_black}

format-suffix            = 
format-suffix-foreground = ${colors.transparent_black}
format-suffix-background = ${colors.darkcyan}


[module/memory]
type     = internal/memory
interval = 10

label-background = ${colors.darkcyan}
label-foreground = ${colors.black}
label-padding   =  5
format           = <label>
label            =  %percentage_used%%

format-prefix            = 
format-prefix-foreground = ${colors.darkcyan}
format-prefix-background = ${colors.transparent_black}

format-suffix            = 
format-suffix-foreground = ${colors.transparent_black}
format-suffix-background = ${colors.darkcyan}


[module/date_time]
type     = internal/date
interval = 1

date     = "   %d.%m.%Y"
date-alt = "   %A, %d. %B"
