label-foreground = ${colors.white}
label-padding    = 3
format-padding   = 0
format           = <label>
label            = %date%    %time%

format-prefix            = 
format-prefix-foreground = ${colors.darkblue}
format-prefix-background = ${colors.transparent_black}

