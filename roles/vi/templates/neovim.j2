" Plugins managed through Pathogen (https://github.com/tpope/vim-pathogen)
execute pathogen#infect('bundle/{}', '{{ xdg_data_home }}/nvim/bundle/{}')


filetype plugin indent on


" Enable TrueColor
set termguicolors

" Enable Gruvbox Dark palette
colorscheme gruvbox
set background=dark
"colorscheme {{ vi_theme }}

" Airline
" Automatically display all buffers when there's only one tab open
let g:airline#extensions#tabline#enabled = 1

" Enable Powerline symbols
let g:airline_powerline_fonts = 1

" Set Airline's theme
let g:vi_theme = '{{ vi_theme }}'

" Promptline
" Match Airline's theme
let g:promptline_theme = '{{ vi_theme }}'

" sections (a, b, c, x, y, z, warn) are optional
let g:promptline_preset = {
  \'b' : [ promptline#slices#cwd() ],
  \'c' : [ promptline#slices#vcs_branch(), promptline#slices#git_status() ],
  \'x' : [ promptline#slices#jobs() ],
  \'warn' : [ promptline#slices#last_exit_code() ]}


" NerdTree
autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * if argc() == 0 && !exists("s:std_in") | NERDTree | endif
let NERDTreeMinimalUI=1


