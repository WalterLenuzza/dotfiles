#!/usr/bin/env bash

# Change directory and list its contents straight away
new_directory="$*"
if [ $# -eq 0 ]; then
  new_directory=${HOME}
fi
builtin cd "${new_directory}" || exit

if [ "$(command -v exa)" ]; then
  exa -a --git --long --header --time-style=long-iso --group --extended
else
  ls -lhAG --color=auto
fi
